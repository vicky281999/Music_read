<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthurDetails">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".AuthurDetails">
        <TextView
            android:text="Name:"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/name"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        tools:context=".AuthurDetails">

        <TextView
            android:text="Ratings:"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ratings"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:context=".AuthurDetails">

        <TextView
            android:text="Music genre name:"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/musicgenrename"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:context=".AuthurDetails">

        <TextView
            android:text="Music genre name extended:"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/musicgenrenameextended"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:context=".AuthurDetails">

        <TextView
            android:text="Music genre vanity:"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/musicgenrevanity"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>